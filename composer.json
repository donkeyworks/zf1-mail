{
    "name": "donkeyworks/zendframework1-mail",
    "description": "Zend Framework 1 Mail component",
    "type": "library",
    "keywords": [
        "framework",
        "zf1"
    ],
    "homepage": "http://framework.zend.com/",
    "license": "BSD-3-Clause",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=7.0.0",
        "ext-ctype": "*",
        "donkeyworks/zendframework1-exception": "^1.0.0",
        "donkeyworks/zendframework1-config": "^1.0.0",
        "donkeyworks/zendframework1-loader": "^1.0.0",
        "donkeyworks/zendframework1-mime": "^1.0.0",
        "donkeyworks/zendframework1-validate": "^1.0.0",
        "donkeyworks/zendframework1-date": "^1.0.0"
    },
    "autoload": {
        "psr-0": {
            "Zend_Mail_": "src/"
        },
        "classmap": [
            "src/Zend/Mail.php"
        ]
    },
    "autoload-dev": {
        "psr-0": {
            "Zend_": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^6.0",
        "phpstan/phpstan": "^0.9.2",
        "friendsofphp/php-cs-fixer": "^2.11",
        "maglnet/composer-require-checker": "^0.1.6 | ^0.2.1",
        "phpro/grumphp": "^0.14.0"
    },
    "include-path": [
        "src/"
    ],
    "archive": {
        "exclude": ["/tests"]
    },
    "scripts": {
        "test": "phpunit",
        "test-with-coverage": "phpunit --coverage-clover=clover.xml",
        "phpstan": "phpstan analyze -l1 -c phpstan.neon --no-progress ./ --ansi",
        "style-check": "php-cs-fixer fix --dry-run -vv"
    },
    "suggest": {
        "ext-posix": "Used when generating a unique MailDir id (if not available, uses random number)"
    }
}
